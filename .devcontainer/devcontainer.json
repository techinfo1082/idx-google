{
  "name": "idx-kvm-container",
  "image": "ubuntu:22.04",

  "runArgs": [
    "--device=/dev/kvm",
    "--cap-add=SYS_ADMIN",
    "--security-opt=apparmor=unconfined",
    "--security-opt=seccomp=unconfined",
    "--privileged"
  ],

  "postCreateCommand": "apt update && apt install -y qemu-kvm qemu-utils",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "forwardPorts": [
    5900,
    8006,
    50922
  ]
}
